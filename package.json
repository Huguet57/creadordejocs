{
  "name": "creadordejocs",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "editor:dev": "npm run dev -w @creadordejocs/editor",
    "editor:build": "npm run build -w @creadordejocs/editor",
    "deploy": "npx vercel --prod --yes",
    "supabase:init": "npx supabase init",
    "supabase:start": "npx supabase start",
    "supabase:status": "npx supabase status",
    "supabase:stop": "npx supabase stop",
    "typecheck": "tsc -p tsconfig.eslint.json --pretty false --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:e2e",
    "check:quick": "npm run lint && npm run typecheck && npm run test:unit",
    "test": "npm run test:unit && npm run test:e2e",
    "build": "tsc -b --pretty false",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "prettier": "^3.5.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "zod": "^3.24.2"
  }
}
